<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

<Frame name="NxFrame">
	<Scripts>
		<OnLoad>
			if Nx and not Nx.NXVerOld then
				Nx:NXOnLoad (self)
			else
				this:Hide()
			end
		</OnLoad>
		<OnEvent>
			Nx:NXOnEvent (event, ...)
		</OnEvent>
		<OnUpdate>
			Nx:NXOnUpdate (elapsed)
		</OnUpdate>
	</Scripts>
</Frame>

<UnitPositionFrame name="NXWorldMapUnitPositionFrame" frameLevel="1500" inherits="UnitPositionFrameTemplate">
</UnitPositionFrame>

<Slider name="NxSliderFrame" orientation="HORIZONTAL" virtual="true">
